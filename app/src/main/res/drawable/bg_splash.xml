<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="50%"
                android:startColor="@color/darker_red_grad"
                android:centerColor="@color/lighter_red_grad"
                android:endColor="@color/darker_red_grad"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/img_logo" />
    </item>
</layer-list>